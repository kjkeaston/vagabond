<!-- Add front-end validations -->
<div class="container">
  <h2>Please Login</h2>
  <hr>
  <br>
  <div class="container">
    <%= form_for @user, url: "/sessions", method: "post" do |f| %>
      <div class="form-group">
        <%= f.label :email, "Enter Email" %>
        <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Choose a Password" %>
        <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
      </div>
      <%= f.submit "Log In", class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
<br>